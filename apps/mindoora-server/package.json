    "migrate": "DB_MAX_CONNECTIONS=1 tsx db/migrate.ts",
    "reset": "DB_MAX_CONNECTIONS=1 tsx db/reset.ts",
    "setup-db": "tsx db/setup-database.ts",
    "drop": "drizzle-kit drop",
    "studio": "start https://local.drizzle.studio && drizzle-kit studio",
