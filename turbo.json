{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**"],
      "env": [
        "NODE_ENV",
        "NEXT_PUBLIC_PASS",
        "NEXT_PUBLIC_MINDOORA",
        "NEXT_PUBLIC_LOCAL_BACKEND_BASE_URL",
        "NEXT_PUBLIC_PRODUCTION_BACKEND_BASE_URL",
        "VERCEL_URL",
        "PORT",
        "VERCEL",
        "ALLOW_ROBOTS",
        "CURRENT_DOMAIN",
        "NEXT_PUBLIC_SANITY_DATASET",
        "NEXT_PUBLIC_SANITY_PROJECT_ID",
        "NEXT_PUBLIC_CAPTCHA_SITE_KEY",
        "NEXT_PUBLIC_SANITY_API_TOKEN",
        "NEXT_PUBLIC_GOOGLE_MAPS_API_KEY",
        "NEXT_PUBLIC_GOOGLE_RECAPCHA_SITE_KEY",
        "NEXT_PUBLIC_GOOGLE_RECAPCHA_SECRET_KEY",
        "NEXT_PUBLIC_EMACH",
        "NEXTAUTH_SECRET",
        "NEXTAUTH_URL",
        "DISCORD_CLIENT_ID",
        "DISCORD_CLIENT_SECRET",
        "FACEBOOK_ID",
        "FACEBOOK_SECRET",
        "GOOGLE_ID",
        "GOOGLE_SECRET",
        "LINKEDIN_ID",
        "LINKEDIN_SECRET",
        "INSTAGRAM_ID",
        "INSTAGRAM_SECRET",
        "TWITTER_ID",
        "TWITTER_SECRET",
        "SKIP_ENV_VALIDATION",
        "DATABASE_URL",
        "NEXT_PUBLIC_VERIFIED_SECRET",
        "NEXT_PUBLIC_EMAIL_PASSWORD",
        "NEXT_PUBLIC_EMAIL_HOST",
        "NEXT_PUBLIC_EMAIL",
        "NEXT_PUBLIC_BASE_URL",
        "NEXT_PUBLIC_LIVEKIT_URL"
      ]
    },
    "lint": {},
    "test": {
      "dependsOn": ["lint", "^build"],
      "outputs": ["coverage/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
